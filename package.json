{
  "private": true,
  "name": "@pgrzesiecki/cqrs",
  "version": "0.0.1",
  "description": "Command Query Responsibility Segregation for NodeJS ecosystem",
  "keywords": [
    "cqrs",
    "command",
    "query"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "rm -rf ./dist && tsc",
    "precommit": "npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pgrzesiecki/node-cqrs.git"
  },
  "author": "Pawel Grzesiecki <pawel.grzesiecki@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/*.ts",
      "!src/index.ts"
    ]
  },
  "optionalDependencies": {
    "rxjs": "^5.5.7"
  }
}
